    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        /* Base Styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            background: linear-gradient(-45deg, #1a56db, #ffffff, #93c5fd, #1e40af);
            background-size: 400% 400%;
            min-height: 100vh;
            animation: gradientBG 15s ease infinite;
            color: #1e3a8a;
            overflow-x: hidden;
        }

        @keyframes gradientBG {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }

        /* Floating particles */
        .particle {
            position: fixed;
            width: 4px;
            height: 4px;
            background: rgba(255, 255, 255, 0.8);
            border-radius: 50%;
            pointer-events: none;
            animation: float 15s infinite linear;
            z-index: 1;
        }

        @keyframes float {
            0% {
                transform: translateY(100vh) translateX(0px) rotate(0deg);
                opacity: 0;
            }
            10% {
                opacity: 1;
            }
            90% {
                opacity: 1;
            }
            100% {
                transform: translateY(-100px) translateX(100px) rotate(360deg);
                opacity: 0;
            }
        }

        /* Main Container */
        .results-container {
            display: flex;
            min-height: 100vh;
            padding: 2rem;
            position: relative;
            z-index: 10;
            align-items: center;
            justify-content: center;
        }

        /* Results Card */
        .results-card {
            background: rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(20px);
            border-radius: 20px;
            padding: 3rem;
            box-shadow: 0 8px 32px rgba(30, 64, 175, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            max-width: 900px;
            width: 100%;
            position: relative;
            overflow: hidden;
        }

        .results-title {
            font-size: 2rem;
            font-weight: 800;
            color: #1e40af;
            margin-bottom: 1.5rem;
            text-align: center;
        }

        /* Bubble Sheet Image */
        .bubble-sheet-image {
            width: 100%;
            max-width: 600px;
            margin: 2rem auto;
            display: block;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            opacity: 0;
            transition: opacity 1s ease;
        }

        /* Big Check Mark */
        .big-check-container {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 100;
            pointer-events: none;
        }

        .big-check {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            background: rgba(59, 130, 246, 0.9);
            display: flex;
            justify-content: center;
            align-items: center;
            animation: checkScale 0.5s ease-out forwards, fadeOut 0.5s ease-out 1.5s forwards;
            transform: scale(0);
            opacity: 0;
        }

        .big-check svg {
            width: 80px;
            height: 80px;
        }

        @keyframes checkScale {
            0% {
                transform: scale(0);
                opacity: 0;
            }
            70% {
                transform: scale(1.1);
                opacity: 1;
            }
            100% {
                transform: scale(1);
                opacity: 1;
            }
        }

        @keyframes fadeOut {
            to {
                opacity: 0;
                transform: scale(1.2);
            }
        }

        /* Check Mark Animation */
        .check-mark {
            position: absolute;
            opacity: 0;
            animation: checkPop 0.5s ease-out forwards;
        }

        @keyframes checkPop {
            0% {
                transform: scale(0.5);
                opacity: 0;
            }
            70% {
                transform: scale(1.2);
                opacity: 0.9;
            }
            100% {
                transform: scale(1);
                opacity: 1;
            }
        }

        /* Button Styles */
        .action-button {
            background: linear-gradient(45deg, #1e40af, #3b82f6);
            background-size: 200% 200%;
            color: white;
            border: none;
            border-radius: 10px;
            padding: 12px 30px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
            box-shadow: 0 4px 15px rgba(30, 64, 175, 0.4);
            animation: buttonGradient 3s ease infinite;
            margin-top: 2rem;
            display: block;
            width: 100%;
            max-width: 300px;
            margin-left: auto;
            margin-right: auto;
        }

        @keyframes buttonGradient {
            0%, 100% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
        }

        /* Responsive Design */
        @media screen and (max-width: 768px) {
            .results-container {
                padding: 1rem;
            }
            
            .results-card {
                padding: 2rem;
            }
        }
    </style>
</head>

