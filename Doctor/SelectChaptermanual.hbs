        /* ØªØ£Ø«ÙŠØ± Ø¹Ù†Ø¯ ØªÙ…Ø±ÙŠØ± Ø§Ù„Ù…Ø§ÙˆØ³ */
        .section:hover {
            transform: scale(1.02);
            box-shadow: 0 6px 15px rgba(0, 123, 255, 0.4);
        }

        /* ØªØ£Ø«ÙŠØ± Ø¹Ù†Ø¯ ØªØ­Ø¯ÙŠØ¯ Ø§Ù„Ø³Ø¤Ø§Ù„ */
        .selected {
