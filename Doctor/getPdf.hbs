    <title>PDF Download</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
       body, html {
            height: 100%;
            margin: 0; 
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            background: linear-gradient(-45deg, #7709e4, #5b0296, #1787e4, #d5a8fc);
            background-size: 400% 400%;
            animation: gradientBG 10s ease infinite;
            color: white;
            text-align: center;
        }
        @keyframes gradientBG {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        } 
        .container {
            display: flex;
            flex-direction: column;
            align-items: center;
            width: 90%; 
        }
        .text {
            margin-top: 20px;
            font-size: 16px;
        }
        .success-container {
            display: none;
            flex-direction: column;
            align-items: center;
            animation: fadeIn 1s forwards;
        }
        .success-container img {
            width: 150px;
            height: 150px;
            animation: bounceIn 1s forwards;
        }
        .success-container p {
            margin-top: 20px;
            font-size: 18px;
            max-width: 600px;
            opacity: 0;
            animation: slideIn 1s forwards;
            animation-delay: 1s;
        }
        .svg-container {
            width: 100px;
            height: 100px;
            position: relative;
        }
        .circle-bg {
            fill: none;
            stroke: rgba(255, 255, 255, 0.3);
            stroke-width: 10;
        }
        .circle-progress {
            fill: none;
            stroke: white;
            stroke-width: 10;
            stroke-dasharray: 251.2; /* 2 * Ï€ * 40 (radius) */
            stroke-dashoffset: 251.2;
            transition: stroke-dashoffset 0.1s linear;
        }
        .percentage {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-size: 18px;
        }
        @keyframes fadeIn {
            from {
                opacity: 0;
            }
            to {
                opacity: 1;
            }
        }
        @keyframes slideIn {
            from {
                transform: translateY(20px);
                opacity: 0;
            }
            to {
                transform: translateY(0);
                opacity: 1;
            }
        }
        @keyframes bounceIn {
            0% {
                transform: scale(0.3);
                opacity: 0;
            }
            50% {
                transform: scale(1.1);
                opacity: 1;
            }
            70% {
                transform: scale(0.9);
            }
            100% {
                transform: scale(1);
            }
        }
    </style>
</head>
<body>
      <div class="container text-center" id="loading-container">
