<html>

<head>
    <title>Congratulations on Downloading!</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.3.2"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap');

        body {
            font-family: 'Roboto', sans-serif;
        }

        .fade-in {
            animation: fadeIn 2s ease-in-out;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        .bounce {
            animation: bounce 2s infinite;
        }

        @keyframes bounce {

            0%,
            20%,
            50%,
            80%,
            100% {
                transform: translateY(0);
            }

            40% {
                transform: translateY(-30px);
            }

            60% {
                transform: translateY(-15px);
            }
        }
    </style>
</head>

<body class="bg-gray-100 flex items-center justify-center min-h-screen">
    <div class="text-center p-6 bg-white rounded-lg shadow-lg fade-in">
        <div class="mb-4">
            <img alt="A decorative image of a file download icon with a checkmark" class="mx-auto bounce" height="100"
                src="https://storage.googleapis.com/a1aa/image/FtMteUiBsi5ODDcOyjYUm87SoiqB1nckmagjGEcf0VQ.jpg"
                width="100" />
        </div>
        <h1 class="text-3xl font-bold text-green-500 mb-2">Congratulations!</h1>
        <p class="text-gray-700 mb-4">Your file has been successfully downloaded.</p>
        <button class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600 transition duration-300">
            <i class="fas fa-thumbs-up mr-2"></i>
            Awesome!
        </button>
    </div>

    <script>
        // تشغيل الفرقعة بشكل مستمر
        function runConfetti() {
            confetti({
                particleCount: 100,
                spread: 90,
                origin: { y: 0.6 }
            });
        }

        // تشغيل الفرقعة كل نصف ثانية
        let confettiInterval = setInterval(runConfetti, 500);

        // إعادة توجيه المستخدم بعد 7 ثواني
        setTimeout(() => {
            clearInterval(confettiInterval); // إيقاف الفرقعة عند الانتقال
            window.location.href = "http://localhost:3000/Admine/Doctor/AllList";
        }, 7000);
    </script>
</body>

</html>
