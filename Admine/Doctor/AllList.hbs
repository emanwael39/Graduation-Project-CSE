                    </div>
                    <div class="tooltip">
                        <i onclick="window.location.href='http://localhost:3000/Admine/Doctor/AddCourse?sub=ESC';" class="fas fa-plus text-gray-600 hover:text-gray-800 cursor-pointer"></i>
                        <span class="tooltiptext">Add Course</span>
                    </div>
                </div>
            </div>
        </div>
        <h2 class="text-2xl font-semibold mb-4">All Lists</h2>
        <div id="listContainer" class="space-y-4"></div>
    </div>

    <script>
       

        function showList(title, items) {
            const container = document.getElementById('listContainer');
            container.innerHTML = `
                <div class="fade-in">
                    <h3 class="text-xl font-medium">${title} List</h3>
                    <ul class="list-disc list-inside">
                        ${items.map(item => `<li>${item}</li>`).join('')}
                    </ul>
                </div>
            `;
        }

        function displayDate() {
            const dateContainer = document.getElementById('dateContainer');
            const today = new Date();
            const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
            dateContainer.textContent = today.toLocaleDateString(undefined, options);
        }

        displayDate();
    </script>
</body>
</html>