<html>

<head>
    <title>Two Section Page</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    </link>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        .hidden {
            display: none;
        }
    </style>
</head>

<body class="bg-blue-50">
    <div class="flex h-screen">
        <!-- Left Section -->
        
       <div class="w-1/3 bg-blue-100 p-6 shadow-lg rounded-lg">
            <h2 class="text-2xl font-bold mb-6 text-blue-900">Categories</h2>
            <div class="relative">
                <button class="w-full text-left p-3 bg-blue-200 hover:bg-blue-300 rounded-lg text-blue-900 font-semibold"
                    onclick="toggleDropdown()">Select Category</button>
                <ul id="dropdown"
                    class="absolute left-0 w-full bg-white border border-gray-300 mt-1 hidden rounded-lg shadow-lg">
                    <li class="p-3 hover:bg-blue-100 cursor-pointer" onclick="showMaterials('Power')">Power</li>
                    <li class="p-3 hover:bg-blue-100 cursor-pointer" onclick="showMaterials('CSE')">CSE</li>
                    <li class="p-3 hover:bg-blue-100 cursor-pointer" onclick="showMaterials('ESC')">ESC</li>
                </ul>
                
            </div>
            <div id="materials" class="mt-6">
                <div id="power" class="hidden">
                    <h3 class="text-xl font-semibold mb-4 text-blue-800">Power Materials</h3>
                    <ul id="powerMaterials"></ul>
                </div>
                <div id="cse" class="hidden">
                    <h3 class="text-xl font-semibold mb-4 text-blue-800">CSE Materials</h3>
                    <ul id="cseMaterials"></ul>
                </div>
                <div id="esc" class="hidden">
                    <h3 class="text-xl font-semibold mb-4 text-blue-800">ECS Materials</h3>
                    <ul id="escMaterials"></ul>
                </div>
            </div>
        </div>
        

        <!-- Right Section -->
        <div class="w-2/3 bg-white p-6 shadow-lg rounded-lg ml-4">
            <h2 class="text-2xl font-bold mb-6 text-blue-900">Course Infromation</h2>
            <form>
                <div class="mb-4">
                    <label class="block text-blue-700 text-sm font-bold mb-2" for="categoryName">Category Name</label>
                    <input
                        class="input1 shadow appearance-none border rounded w-full py-2 px-3 text-blue-700 leading-tight focus:outline-none focus:shadow-outline"
                        id="categoryName" type="text" placeholder="Category Name" readonly>
                </div>
                <div class="mb-4">
                    <label class="block text-blue-700 text-sm font-bold mb-2" for="materialName">Material Name</label>
                    <input
                        class="input2 shadow appearance-none border rounded w-full py-2 px-3 text-blue-700 leading-tight focus:outline-none focus:shadow-outline"
                        id="materialName" type="text" placeholder="Material Name" readonly>
                </div>
                <div class="mb-4">
                    <label class="block text-blue-700 text-sm font-bold mb-2" for="input1">Course Code</label>
                    <input
                        class="input3 shadow appearance-none border rounded w-full py-2 px-3 text-blue-700 leading-tight focus:outline-none focus:shadow-outline"
                        id="input1" type="text" placeholder="Enter the Course Code">
                </div>
                <div class="mb-4">
                    <label class="block text-blue-700 text-sm font-bold mb-2" for="input2">Course Level</label>
                    <select
                        class="input4 shadow appearance-none border rounded w-full py-2 px-3 text-blue-700 leading-tight focus:outline-none focus:shadow-outline"
                        id="input2">
                        <option value="" disabled selected>Select Course Level</option>
                        <option value="first">First</option>
                        <option value="second">Second</option>
                        <option value="third">Third</option>
                        <option value="fourth">Fourth</option>
                    </select>
                </div>
                <div class="mb-4">
                    <label class="block text-blue-700 text-sm font-bold mb-2" for="input3">Semester</label>
                    <select
                        class="input5 shadow appearance-none border rounded w-full py-2 px-3 text-blue-700 leading-tight focus:outline-none focus:shadow-outline"
                        id="input3">
                        <option value="" disabled selected>Select Semester</option>
                        <option value="winter">Winter</option>
                        <option value="spring">Spring</option>
                        <option value="summer">Summer</option>
                        <option value="fall">Fall</option>
                    </select>
                </div>
                <div class="mb-4">
                    <label class="block text-blue-700 text-sm font-bold mb-2" for="input4">Instructor Name</label>
                    <input
                        class="input6 shadow appearance-none border rounded w-full py-2 px-3 text-blue-700 leading-tight focus:outline-none focus:shadow-outline"
                        id="input4" type="text" placeholder="Enter the Instructor Name">
                </div>
                <div class="mb-4">
                    <label class="block text-blue-700 text-sm font-bold mb-2" for="input5">Time for exam</label>
                    <input
                        class="input8 shadow appearance-none border rounded w-full py-2 px-3 text-blue-700 leading-tight focus:outline-none focus:shadow-outline"
                        id="input5" type="number" placeholder="Enter Time for exam" min="1" max="3">
                </div>
                <div class="mb-4">
                    <label class="block text-blue-700 text-sm font-bold mb-2" for="input6">Full Mark</label>
                    <input
                        class="input9 shadow appearance-none border rounded w-full py-2 px-3 text-blue-700 leading-tight focus:outline-none focus:shadow-outline"
                        id="input6" type="number" placeholder="Enter the Full Mark">
                </div>
                <div class="mb-4">
                    <label class="block text-blue-700 text-sm font-bold mb-2" for="input7">Final or Midterm</label>
                    <select
                        class="input10 shadow appearance-none border rounded w-full py-2 px-3 text-blue-700 leading-tight focus:outline-none focus:shadow-outline"
                        id="input7">
                        <option value="Final">Final</option>
                        <option value="Midterm">Midterm</option>
                    </select>
                </div>
                <div class="mb-4">
                    <label class="block text-blue-700 text-sm font-bold mb-2" for="input8">Number of Questions</label>
                    <input
                        class="input11 shadow appearance-none border rounded w-full py-2 px-3 text-blue-700 leading-tight focus:outline-none focus:shadow-outline"
                        id="input8" type="number" placeholder="Enter the Number of Questions in  bubble sheet" min="1"
                        max="90">
                </div>
                {{!-- <div class="mb-4">
                    <label class="block text-blue-700 text-sm font-bold mb-2" for="input10">The Book Of matrial
                        (File)</label>
                    <input
                        class="shadow appearance-none border rounded w-full py-2 px-3 text-blue-700 leading-tight focus:outline-none focus:shadow-outline"
                        id="input10" type="file">
                </div> --}}
                <div class="mb-4">
                    <button
                        class="btn bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
                        type="button">
                        Add
                    </button>
                </div>
            </form>
        </div>
    </div>

    

    <script src="/Script/DocumentBubbleSheet.js"></script>
</body>

</html>