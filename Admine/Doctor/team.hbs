            const departmentFilter = document.getElementById('departmentFilter');

            // Create team cards
            teamMembers.forEach((member, index) => {
                teamGrid.innerHTML += createTeamCard(member, index);
            });

            // Add staggered animation
            setTimeout(() => {
                document.querySelectorAll('.team-card').forEach((card, index) => {
                    setTimeout(() => {
                        card.classList.add('card-visible');
                    }, index * 150);
                });
            }, 100);

            // Add department filter event listeners
            departmentFilter.addEventListener('click', (e) => {
                if (e.target.classList.contains('department-btn')) {
                    filterTeamMembers(e.target.dataset.department);
                }
            });
