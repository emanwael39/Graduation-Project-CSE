                const particle = document.createElement('div');
                particle.className = 'floating-particle';
                particle.style.left = Math.random() * 100 + '%';
                particle.style.top = Math.random() * 100 + '%';
                particle.style.animationDelay = Math.random() * 2 + 's';
                particle.style.animationDuration = (2 + Math.random() * 2) + 's';
                card.appendChild(particle);
            }
        }

        // Remove floating particles
        function removeFloatingParticles(card) {
            const particles = card.querySelectorAll('.floating-particle');
            particles.forEach(particle => particle.remove());
        }

        // Filter team members
        function filterTeamMembers(department) {
            selectedDepartment = department;
            
            // Update active button
            document.querySelectorAll('.department-btn').forEach(btn => {
                btn.classList.remove('active');
                if (btn.dataset.department === department) {
                    btn.classList.add('active');
                }
            });

            // Filter and display cards
            const cards = document.querySelectorAll('.team-card');
            cards.forEach((card, index) => {
                const cardDepartment = card.dataset.department;
                if (department === 'All' || cardDepartment === department) {
                    card.style.display = 'block';
                    setTimeout(() => {
                        card.classList.add('card-visible');
                    }, index * 150);
                } else {
                    card.classList.remove('card-visible');
                    setTimeout(() => {
                        card.style.display = 'none';
                    }, 300);
                }
            });
        }

        // Initialize the page
